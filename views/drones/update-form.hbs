<h2>Update the drone</h2>

<form action="/drones/{{drone._id}}/edit" method="post">
<label for="name">Name</label>
<input type="text" name="name" value="{{drone.name}}"/>

<label for="propellers">Propellers</label>
<input type="number" name="propellers" min="1" max="10" value="{{drone.propellers}}"/>

<label for="maxSpeed">maxSpeed</label>
<input type="number" name="maxSpeed" min="1" max="10" value="{{drone.maxSpeed}}"/>

<button type="submit">Update drone</button>

</form>